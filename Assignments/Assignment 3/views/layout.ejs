<!-- Cart Sidebar -->
<div id="cartSidebar" class="cart-sidebar">
  <div class="cart-header">
    <h3>YOUR CART</h3>
    <button onclick="toggleCart()" class="close-btn">&times;</button>
  </div>
  <div class="cart-body">
    <p class="empty-message">Your cart is empty</p>
    <button class="cart-btn">CONTINUE SHOPPING</button>
  </div>
    <div class="cart-footer">
    <p>Subtotal: $0 USD</p>

    <% if (typeof user !== 'undefined') { %>
        <a href="/checkout" class="full-width-link">
        <button class="checkout-btn full-width-btn">CHECK OUT</button>
        </a>

    <% } else { %>
        <button class="checkout-btn disabled" disabled style="background-color: #ccc; cursor: not-allowed;">
        CHECK OUT
        </button>

        <div class="cart-login-reminder" style="text-align: center; font-size: 14px; margin-top: 1rem;">
        <p><strong>HAVE AN ACCOUNT?</strong><br />
            <a href="/login" style="text-decoration: underline;">Log in</a> to check out faster.
        </p>
        </div>
    <% } %>
    </div>
</div>

<!-- Blur Background -->
<div id="cartOverlay" class="cart-overlay" onclick="toggleCart()"></div>


<script>
  function toggleCart() {
    const cart = document.getElementById("cartSidebar");
    const overlay = document.getElementById("cartOverlay");

    cart.classList.toggle("open");
    overlay.classList.toggle("show");
  }
</script>



