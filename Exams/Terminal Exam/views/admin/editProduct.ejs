<head>
  <title>Edit Product | Admin</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<div class="container my-5" style="max-width: 800px;">

  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb small bg-transparent px-0 mb-0">
      <li class="breadcrumb-item">
        <a href="/admin/products" class="text-muted text-decoration-none">Manage Products</a>
      </li>
      <li class="breadcrumb-item active text-dark" aria-current="page">Edit Product</li>
    </ol>
  </nav>

  <!-- Heading -->
  <h3 class="mb-4 text-uppercase fw-bold text-center">Edit Product</h3>

  <form action="/admin/products/<%= product._id %>/edit" method="POST" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-white">
    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label text-uppercase small fw-semibold">Name</label>
        <input type="text" name="name" value="<%= product.name %>" class="form-control rounded-1" required />
      </div>
      <div class="col-md-6">
        <label class="form-label text-uppercase small fw-semibold">Price ($)</label>
        <input type="number" name="price" value="<%= product.price %>" class="form-control rounded-1" step="0.01" required />
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label text-uppercase small fw-semibold">Description</label>
      <textarea name="description" class="form-control rounded-1" rows="3"><%= product.description %></textarea>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label text-uppercase small fw-semibold">Category</label>
        <select name="category" class="form-select rounded-1" required>
          <option value="">Select Category</option>
          <option value="Women" <%= product.category === 'Women' ? 'selected' : '' %>>Women</option>
          <option value="Men" <%= product.category === 'Men' ? 'selected' : '' %>>Men</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label text-uppercase small fw-semibold">Subcategory</label>
        <input type="text" name="subCategory" value="<%= product.subCategory %>" class="form-control rounded-1" placeholder="e.g. Women-Clothes" />
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label text-uppercase small fw-semibold">Current Main Image</label><br />
      <% if (product.image) { %>
        <img src="<%= product.image %>" alt="Main Image" style="width: 140px;" class="img-thumbnail mb-2" />
      <% } %>
      <input type="file" name="image" class="form-control rounded-1 mt-2" accept="image/*" />
    </div>

    <div class="mb-3">
      <label class="form-label text-uppercase small fw-semibold">Current Hover Image</label><br />
      <% if (product.hoverImage) { %>
        <img src="<%= product.hoverImage %>" alt="Hover Image" style="width: 140px;" class="img-thumbnail mb-2" />
      <% } %>
      <input type="file" name="hoverImage" class="form-control rounded-1 mt-2" accept="image/*" />
    </div>

    <div class="d-flex justify-content-between align-items-center pt-3">
      <a href="/admin/products" class="btn btn-outline-secondary rounded-1 text-uppercase fw-bold px-4">Cancel</a>
      <button type="submit" class="btn btn-dark rounded-1 text-uppercase fw-bold px-4">Update Product</button>
    </div>
  </form>
</div>
