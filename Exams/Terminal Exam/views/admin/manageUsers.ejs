<head>
  <title>Manage Users | Admin</title>
  <link rel="stylesheet" href="/css/products.css" />
</head>

<div class="container my-5">
  <h3 class="text-uppercase mb-4 text-center">Manage Users</h3>

  <div class="table-responsive">
    <table class="table table-bordered align-middle shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>User Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u.name %></td>
            <td><%= u.email %></td>
            <td>
              <a href="/admin/users/<%= u._id %>/orders" class="btn btn-sm btn-primary">View Orders</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
