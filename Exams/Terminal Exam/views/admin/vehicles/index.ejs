<head>
  <title>Manage Vehicles | Admin | Ted Baker</title>
  <link rel="stylesheet" href="/css/products.css" />
  <style>
    .vehicle-image-container {
      height: 320px;
      background: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .vehicle-image-container img {
      max-height: 100%;
      max-width: 100%;
      object-fit: contain;
    }

    .carousel-inner .carousel-item > .row {
      display: flex;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
      background-color: rgba(0, 0, 0, 0.6);
      border-radius: 50%;
      padding: 10px;
    }

    .admin-action-btns {
      display: flex;
      justify-content: center;
      gap: 10px;
    }
  </style>
</head>

<div class="container px-4 px-md-5 mb-5">
  <h4 class="text-center text-uppercase fw-semibold my-5">Manage Vehicles</h4>


  <div class="text-end mb-4">
    <a href="/admin/vehicles/new" class="btn btn-dark px-4">Add Vehicle</a>
  </div>


  <div id="adminVehicleCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

      <% for (let i = 0; i < vehicles.length; i += 4) { %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <div class="row g-4">
            <% vehicles.slice(i, i + 4).forEach(vehicle => { %>
              <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                  <div class="vehicle-image-container">
                    <img src="<%= vehicle.image %>" alt="<%= vehicle.name %>">
                  </div>
                  <div class="card-body px-2 py-3">
                    <h6 class="text-uppercase fw-semibold mb-1" style="font-size: 0.9rem;"><%= vehicle.name %></h6>
                    <p class="text-muted mb-1 small"><%= vehicle.brand %> - <%= vehicle.type %></p>
                    <p class="fw-bold mb-2">$<%= vehicle.price %></p>

                    <div class="admin-action-btns mt-2">
                      <a href="/admin/vehicles/<%= vehicle._id %>/edit" class="btn btn-outline-dark btn-sm">Edit</a>
                      <form action="/admin/vehicles/<%= vehicle._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>

    </div>


    <button class="carousel-control-prev" type="button" data-bs-target="#adminVehicleCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#adminVehicleCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
