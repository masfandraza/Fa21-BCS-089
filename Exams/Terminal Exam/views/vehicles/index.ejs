<head>
  <link rel="stylesheet" href="/css/products.css" />
  <title>Vehicles | Ted Baker</title>
  <style>
    .vehicle-image-container {
      height: 320px;
      background: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .vehicle-image-container img {
      max-height: 100%;
      max-width: 100%;
      object-fit: contain;
    }

    .pagination .page-item.active .page-link {
      background-color: #000;
      border-color: #000;
      color: #fff;
    }

    .pagination .page-link {
      color: #000;
    }
  </style>
</head>

<div class="container-fluid px-4 px-md-5 mb-5">
  <h4 class="text-center text-uppercase fw-semibold my-5">Browse Our Vehicles</h4>


  <div class="mb-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb small mb-0">
        <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Home</a></li>
        <li class="breadcrumb-item active text-dark" aria-current="page">Vehicles</li>
      </ol>
    </nav>
  </div>

  <div class="row g-4">
    <% vehicles.forEach(vehicle => { %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 text-center">
          <div class="vehicle-image-container">
            <img src="<%= vehicle.image %>" alt="<%= vehicle.name %>">
          </div>
          <div class="card-body px-2 py-3">
            <h6 class="text-uppercase fw-semibold mb-1" style="font-size: 0.9rem;"><%= vehicle.name %></h6>
            <p class="text-muted mb-1 small"><%= vehicle.brand %> - <%= vehicle.type %></p>
            <p class="fw-bold mb-2">$<%= vehicle.price %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>


  <% if (totalPages > 1) { %>
    <div class="d-flex justify-content-center mt-5">
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="/vehicles?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </div>
  <% } %>
</div>
