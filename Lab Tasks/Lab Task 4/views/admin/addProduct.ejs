<head>
  <title>Add Product | Admin</title>
</head>

<!-- Left-aligned breadcrumb, outside centered container -->
<div class="container mt-5 px-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb small bg-transparent px-0 mb-2">
      <li class="breadcrumb-item">
        <a href="/admin/products" class="text-decoration-none text-muted">Manage Products</a>
      </li>
      <li class="breadcrumb-item active text-dark" aria-current="page">Add Product</li>
    </ol>
  </nav>
</div>

<!-- Centered form content -->
<div class="container" style="max-width: 800px;">
  <h3 class="mb-4 text-uppercase text-center" style="letter-spacing: 0.5px;">Add New Product</h3>

  <form action="/admin/products" method="POST" enctype="multipart/form-data" class="p-4 border rounded bg-white shadow-sm">
    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label text-uppercase small">Name</label>
        <input type="text" name="name" class="form-control rounded-1" required />
      </div>
      <div class="col-md-6">
        <label class="form-label text-uppercase small">Price ($)</label>
        <input type="number" name="price" class="form-control rounded-1" step="0.01" required />
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label text-uppercase small">Description</label>
      <textarea name="description" class="form-control rounded-1" rows="3" placeholder="Write a short description..."></textarea>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label class="form-label text-uppercase small">Category</label>
        <select name="category" class="form-select rounded-1" required>
          <option value="">Select Category</option>
          <option value="Women">Women</option>
          <option value="Men">Men</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label text-uppercase small">Subcategory</label>
        <input type="text" name="subCategory" class="form-control rounded-1" placeholder="e.g. Women-Clothes" />
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label text-uppercase small">Main Image</label>
      <input type="file" name="image" class="form-control rounded-1" accept="image/*" required />
    </div>

    <div class="mb-3">
      <label class="form-label text-uppercase small">Hover Image (optional)</label>
      <input type="file" name="hoverImage" class="form-control rounded-1" accept="image/*" />
    </div>

    <div class="d-flex justify-content-between align-items-center pt-3">
      <a href="/admin/products" class="btn btn-outline-secondary rounded-1 text-uppercase px-4">Cancel</a>
      <button type="submit" class="btn btn-dark rounded-1 text-uppercase px-4">Add Product</button>
    </div>
  </form>
</div>
